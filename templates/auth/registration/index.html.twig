{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}

{{ parent() }}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Create New Room</h3>
                </div>
                <div class="card-body">
                    {% for flash_message in app.flashes('success') %}
                        <div class="alert alert-success">
                            {{ flash_message }}
                        </div>
                    {% endfor %}

                    {{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}
                        <div class="mb-3">
                            {{ form_label(form.firstName, 'First Name', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                            {{ form_widget(form.firstName, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.firstName) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.lastName, 'Last Name', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                            {{ form_widget(form.lastName, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.lastName) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.username, 'Username', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                            {{ form_widget(form.username, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.username) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.email, 'Email address', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                            {{ form_widget(form.email, {'attr': {'class': 'form-control', 'aria-describedby': 'emailHelp'}}) }}
                            <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
                            {{ form_errors(form.email) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.password, 'Password', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                            {{ form_widget(form.password, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.password) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.password_repeat, 'Repeat Password', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                            {{ form_widget(form.password_repeat, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.password_repeat) }}
                        </div>

                        {% if form.agreeTerms is defined %}
                            <div class="mb-3 form-check">
                                {{ form_widget(form.agreeTerms, {'attr': {'class': 'form-check-input'}}) }}
                                {{ form_label(form.agreeTerms, 'Check me out', {'label_attr': {'class': 'form-check-label'}}) }}
                                {{ form_errors(form.agreeTerms) }}
                            </div>
                        {% endif %}

                        <div class="d-grid">
                            {{ form_widget(form.submit) }}
                        </div>
                    {{ form_end(form) }}

                    {% for flashMessage in app.flashes('error') %}
                        <div class="alert alert-danger mt-3">
                            {{ flashMessage }}
                        </div>
                    {% endfor %}
                    {% for flashMessage in app.flashes('success') %}
                        <div class="alert alert-success mt-3">
                            {{ flashMessage }}
                        </div>
                    {% endfor %}

                    <div class="mt-3 text-center">
                        <p>Already have an account? login <a href="{{ path('app_login') }}">Here</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}
